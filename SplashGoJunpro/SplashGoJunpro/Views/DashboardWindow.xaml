                        <Image Source="/Images/logout.png" Width="48" Height="48" Margin="0,0,15,0"/>
                        <TextBlock Text="Logout" 
                                       VerticalAlignment="Center" 
                                       FontSize="24"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       x:Name="LogoutText"/>

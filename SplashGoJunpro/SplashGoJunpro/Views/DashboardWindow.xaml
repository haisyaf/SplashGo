<Window x:Class="SplashGoJunpro.Views.DashboardWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:SplashGoJunpro.Views"
            xmlns:sys="clr-namespace:System;assembly=mscorlib"
            xmlns:vm="clr-namespace:SplashGoJunpro.ViewModels"
            mc:Ignorable="d"
            Title="Sea Journey: Dive, Sail &amp; Explore" 
            Height="1080" 
            Width="1920"
            WindowStartupLocation="CenterScreen"
            WindowState="Maximized">

    <!-- Instantiate ViewModel for design/runtime (you may set DataContext in code or an IoC container instead) -->
    <Window.DataContext>
        <vm:DashboardViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Sidebar Collapsed Width -->
        <sys:Double x:Key="CollapsedWidth">100</sys:Double>
        <sys:Double x:Key="ExpandedWidth">400</sys:Double>

        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0066CC"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1A2332"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="TextGray" Color="#666666"/>
        <SolidColorBrush x:Key="PriceRed" Color="#E74C3C"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                    BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A3F5F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="60,20"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBlue}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveCategoryButtonStyle" TargetType="Button" BasedOn="{StaticResource CategoryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Hotel Card Style -->
        <Style x:Key="HotelCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="536"/>
            <Setter Property="Height" Value="516"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" Opacity="0.5" BlurRadius="15" ShadowDepth="3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <DockPanel>
                                    <ContentPresenter Margin="10,0,0,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}"/>
                                    <ToggleButton DockPanel.Dock="Right"
                                              Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                              ClickMode="Press"
                                              Background="Transparent"
                                              BorderThickness="0" HorizontalAlignment="Right">
                                        <Path Data="M 0 0 L 12 12 L 24 0 Z"
                                          Fill="White"
                                          Width="24"
                                          Height="12"
                                          Margin="0,0,10,0"
                                          VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </DockPanel>
                            </Border>
                            <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                                <Border Background="White"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontSize" Value="28"/>
                        <Setter Property="FontFamily" Value="Inter"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="ItemBorder"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource PrimaryBlue}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Price Dropdown Style -->
        <Style x:Key="PriceDropdownStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="275"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                            <Grid>
                                <TextBlock Text="Price" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="20,0,0,0"
                                               Foreground="{TemplateBinding Foreground}"
                                               FontSize="{TemplateBinding FontSize}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               FontFamily="{TemplateBinding FontFamily}"/>
                                <Path Data="M 0 0 L 12 12 L 24 0 Z"
                                          Fill="White"
                                          Width="24"
                                          Height="12"
                                          Margin="0,0,20,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Price Input Style -->
        <Style x:Key="PriceInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="CaretBrush" Value="#333333"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Content with left margin for collapsed sidebar -->
        <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                Margin="100,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Hero Section -->
                <Grid Grid.Row="0" Height="720">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/hero-bg.png" Stretch="UniformToFill"/>
                    </Grid.Background>

                    <!-- Overlay -->
                    <Border Background="#AA000000"/>

                    <!-- Content -->
                    <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="50">

                        <TextBlock Text="Sea Journey: Dive, Sail &amp; Explore" 
                                       FontSize="64" 
                                       FontWeight="ExtraBold" 
                                       Foreground="White"
                                       FontFamily="Inter"
                                       TextAlignment="Center"
                                       Margin="0,0,0,105"/>

                        <TextBlock Text="What do you want to do in" 
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontFamily="Inter"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,40"/>

                        <!-- Search Boxes -->
                        <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,45">
                            <Border Background="#33FFFFFF" 
                                        BorderBrush="White"
                                        BorderThickness="1"
                                        CornerRadius="10" 
                                        Padding="25,10"
                                        Margin="0,0,30,0"
                                        Width="450">
                                <DockPanel>
                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" 
                                              Fill="White" 
                                              Width="40" 
                                              Height="40" 
                                              Stretch="Uniform"
                                              DockPanel.Dock="Right"
                                              Margin="10,0,0,0"/>
                                    <TextBox x:Name="BeachSearchBox"
                                                 Background="Transparent" 
                                                 BorderThickness="0"
                                                 Foreground="White"
                                                 FontSize="32"
                                                 FontWeight="Light"
                                                 FontFamily="Inter"
                                                 VerticalContentAlignment="Center"
                                                 CaretBrush="White"
                                                 Text="{Binding BeachSearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </DockPanel>
                            </Border>

                            <Border Background="#33FFFFFF" 
                                        CornerRadius="10" 
                                        BorderBrush="White"
                                        BorderThickness="1"
                                        Padding="25,10"
                                        Width="805">
                                <DockPanel>
                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" 
                                              Fill="White" 
                                              Width="40" 
                                              Height="40" 
                                              Stretch="Uniform"
                                              DockPanel.Dock="Right"
                                              Margin="10,0,0,0"/>
                                    <TextBox x:Name="ActivitySearchBox"
                                                 Background="Transparent" 
                                                 BorderThickness="0"
                                                 Foreground="White"
                                                 FontSize="32"
                                                 FontWeight="Light"
                                                 FontFamily="Inter"
                                                 VerticalContentAlignment="Center"
                                                 CaretBrush="White"
                                                 Text="{Binding ActivitySearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </DockPanel>
                            </Border>
                        </StackPanel>

                        <!-- Price Dropdown and category buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <!-- Price Dropdown -->
                            <Grid Margin="0,0,15,0">
                                <ToggleButton x:Name="PriceToggleButton"
                                                  Style="{StaticResource PriceDropdownStyle}"
                                                  IsChecked="{Binding IsPricePopupOpen, Mode=TwoWay}"/>

                                <Popup x:Name="PricePopup"
                                           PlacementTarget="{Binding ElementName=PriceToggleButton}"
                                           Placement="Bottom"
                                           IsOpen="{Binding IsPricePopupOpen, Mode=TwoWay}"
                                           AllowsTransparency="True"
                                           StaysOpen="False"
                                           PopupAnimation="Slide">
                                    <Border Background="White"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="20"
                                                Width="275">
                                        <StackPanel>
                                            <TextBlock Text="From"
                                                           Foreground="#333333"
                                                           FontSize="20"
                                                           FontFamily="Inter"
                                                           FontWeight="Medium"
                                                           Margin="0,0,0,8"/>
                                            <TextBox x:Name="PriceFromTextBox"
                                                         Style="{StaticResource PriceInputStyle}"
                                                         Text="{Binding PriceFrom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                                            <TextBlock Text="To"
                                                           Foreground="#333333"
                                                           FontSize="20"
                                                           FontFamily="Inter"
                                                           FontWeight="Medium"
                                                           Margin="0,15,0,8"/>
                                            <TextBox x:Name="PriceToTextBox"
                                                         Style="{StaticResource PriceInputStyle}"
                                                         Text="{Binding PriceTo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                                            <Button Content="Apply"
                                                        Background="{StaticResource PrimaryBlue}"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Height="45"
                                                        FontSize="20"
                                                        FontFamily="Inter"
                                                        FontWeight="SemiBold"
                                                        Margin="0,15,0,0"
                                                        Cursor="Hand"
                                                        Command="{Binding ApplyPriceFilterCommand}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Grid>

                            <!-- Category buttons -->
                            <Border BorderBrush="White" BorderThickness="1" CornerRadius="5" Padding="30,15" Background="#33FFFFFF">
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Hotels" Command="{Binding SelectCategoryCommand}" CommandParameter="Hotels"/>
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Beachclubs" Command="{Binding SelectCategoryCommand}" CommandParameter="Beachclubs" Margin="60,0,0,0"/>
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Tours" Command="{Binding SelectCategoryCommand}" CommandParameter="Tours" Margin="60,0,0,0"/>
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Spas" Command="{Binding SelectCategoryCommand}" CommandParameter="Spas" Margin="60,0,0,0"/>
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Culinaries" Command="{Binding SelectCategoryCommand}" CommandParameter="Culinaries" Margin="60,0,0,0"/>
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Recreational" Command="{Binding SelectCategoryCommand}" CommandParameter="Recreational" Margin="60,0,0,0"/>
                                    <Button Style="{StaticResource CategoryButtonStyle}" Content="Souvenirs" Command="{Binding SelectCategoryCommand}" CommandParameter="Souvenirs" Margin="60,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Sort By -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,0,0">
                            <TextBlock Text="Sort By:" VerticalAlignment="Center" Margin="0,0,25,0" FontSize="32" Foreground="White" FontWeight="Light" FontFamily="Inter"/>
                            <ComboBox x:Name="SortComboBox"
                                          Width="270" 
                                          Height="50" 
                                          Style="{StaticResource SearchComboBoxStyle}" 
                                          Foreground="White"
                                          SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}">
                                <ComboBoxItem Content="Lowest Price" />
                                <ComboBoxItem Content="Highest Price"/>
                                <ComboBoxItem Content="Rating"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Results Section -->
                <Grid Grid.Row="1" Background="{StaticResource LightGray}">
                    <StackPanel Margin="30,20">
                        <!-- Hotel Cards Grid -->
                        <ItemsControl x:Name="HotelItemsControl" ItemsSource="{Binding FilteredDestinations}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource HotelCardStyle}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="315"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Hotel Image -->
                                            <Border Grid.Row="0" CornerRadius="10,10,0,0" Height="315" Width="536">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding ImagePath}" Stretch="UniformToFill"/>
                                                </Border.Background>

                                                <!-- Bookmark Icon -->
                                                <Button HorizontalAlignment="Right" 
                                                            VerticalAlignment="Top"
                                                            Margin="10"
                                                            Background="White"
                                                            BorderThickness="0"
                                                            Width="35"
                                                            Height="35"
                                                            Cursor="Hand"
                                                            Command="{Binding DataContext.ToggleBookmarkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}">
                                                    <Path Data="M17,3H7A2,2 0 0,0 5,5V21L12,18L19,21V5C19,3.89 18.1,3 17,3Z" 
                                                              Width="18" 
                                                              Height="18" 
                                                              Stretch="Uniform">
                                                        <Path.Style>
                                                            <Style TargetType="Path">
                                                                <Setter Property="Fill" Value="{StaticResource TextGray}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsBookmarked}" Value="True">
                                                                        <Setter Property="Fill" Value="{StaticResource PrimaryBlue}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Path.Style>
                                                    </Path>
                                                </Button>
                                            </Border>

                                            <!-- Hotel Info -->
                                            <StackPanel Grid.Row="1" Margin="24,27,0,0">
                                                <TextBlock Text="{Binding Name}" 
                                                               FontSize="32" 
                                                               FontWeight="Bold"
                                                               FontFamily="Inter"
                                                               Margin="0,0,0,10"/>
                                                <DockPanel>
                                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Width="330">
                                                        <Image Source="/Images/location_on.png" Width="28" Height="28" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding Location}" 
                                                                       Foreground="{StaticResource TextGray}"
                                                                       FontSize="28"
                                                                       FontFamily="Inter"
                                                                       FontWeight="Light"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding FormattedPrice}" 
                                                                   Foreground="{StaticResource PriceRed}"
                                                                   FontSize="28"
                                                                   FontWeight="SemiBold"
                                                                   FontFamily="Inter"
                                                                   DockPanel.Dock="Right"/>
                                                </DockPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Sidebar (overlays on top, nempel saat collapsed, melayang saat expanded) -->
        <Border
                Background="{StaticResource DarkBlue}"
                x:Name="Sidebar"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Panel.ZIndex="10">

            <!-- Shadow Effect when expanded -->
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="Width" Value="400">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Sidebar"
                                             Storyboard.TargetProperty="Width"
                                             To="400"
                                             Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Sidebar"
                                             Storyboard.TargetProperty="Width"
                                             To="100"
                                             Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseIn"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <StackPanel>
                <!-- Dashboard -->
                <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding DashboardCommand}" Margin="0,40,0,40">
                    <StackPanel Orientation="Horizontal" Margin="28,0,20,0">
                        <Image Source="/Images/home.png" Width="48" Height="48" Margin="0,0,15,0"/>
                        <TextBlock Text="Dashboard" 
                                       VerticalAlignment="Center" 
                                       FontSize="24"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       x:Name="DashboardText"/>
                    </StackPanel>
                </Button>

                <!-- History -->
                <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding HistoryCommand}" Margin="0,0,0,40">
                    <StackPanel Orientation="Horizontal" Margin="28,0,20,0">
                        <Image Source="/Images/history.png" Width="48" Height="48" Margin="0,0,15,0"/>
                        <TextBlock Text="History" 
                                       VerticalAlignment="Center" 
                                       FontSize="24"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       x:Name="HistoryText"/>
                    </StackPanel>
                </Button>

                <!-- Saved -->
                <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding SavedCommand}" Margin="0,0,0,40">
                    <StackPanel Orientation="Horizontal" Margin="28,0,20,0">
                        <Image Source="/Images/bookmark.png" Width="48" Height="48" Margin="0,0,15,0"/>
                        <TextBlock Text="Saved" 
                                       VerticalAlignment="Center" 
                                       FontSize="24"
                                       FontFamily="Inter"
                                       FontWeight="Medium"
                                       x:Name="SavedText"/>
                    </StackPanel>
                </Button>

                <!-- Add Business -->
                <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding AddBusinessCommand}">
                    <StackPanel Orientation="Horizontal" Margin="28,0,20,0">
                        <Image Source="/Images/add_business.png" Width="48" Height="48" Margin="0,0,15,0"/>
                        <TextBlock Text="Add Business" 
                                       VerticalAlignment="Center" 
                                       FontSize="24"
                                       FontFamily="Inter"

<Window x:Class="SplashGoJunpro.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplashGoJunpro.Views"
        xmlns:helpers="clr-namespace:SplashGoJunpro.Helpers"
        xmlns:converters="clr-namespace:SplashGoJunpro.Converters"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="740" Width="533"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converters -->
        <converters:PlaceholderVisibilityConverter x:Key="PlaceholderVisibilityConverter"/>

        <!-- Style untuk TextBox dengan placeholder -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Padding" Value="40,12,12,12"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#037ADE"/>
        </Style>

        <!-- Style untuk PasswordBox -->
        <Style x:Key="PlaceholderPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Padding" Value="40,12,12,12"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style untuk Button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#037ADE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#025A9E" Offset="0"/>
                                            <GradientStop Color="#02A88A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#014578" Offset="0"/>
                                            <GradientStop Color="#018368" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk Google Button -->
        <Style x:Key="GoogleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderBrush" Value="#DADCE0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F8F9FA"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#BDBDBD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8EAED"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#9E9E9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom CheckBox Style -->
        <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Foreground" Value="#aaa"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <!-- Custom Checkbox Box -->
                            <Border x:Name="CheckBoxBorder"
                                    Width="20"
                                    Height="20"
                                    BorderBrush="#DADCE0"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Background="White"
                                    Margin="0,0,8,0">
                                <!-- Checkmark -->
                                <Path x:Name="CheckMark"
                                      Data="M0,5 L3,8 L8,0"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Stretch="Uniform"
                                      Width="10"
                                      Height="10"
                                      Visibility="Collapsed"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"/>
                            </Border>
                            <!-- Content (Text) -->
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <!-- When Checked -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#037ADE"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#037ADE"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <!-- When Mouse Over -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#037ADE"/>
                            </Trigger>
                            <!-- When Unchecked and Mouse Over -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#F0F8FF"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <!-- Main Window Border with Shadow -->
        <Border Background="White"
      CornerRadius="10"
            Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="Black"
       Direction="270"
    ShadowDepth="5"
     Opacity="0.3"
   BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <!-- Close Button -->
                <Button Content="✕" 
    HorizontalAlignment="Right" 
   VerticalAlignment="Top" 
        Width="30" 
    Height="30" 
  Margin="0,20,20,0"
   Background="Transparent"
   BorderThickness="0"
   Foreground="#999"
        FontSize="20"
       FontWeight="Black"
  Cursor="Hand"
     Command="{Binding CloseCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Main Content -->
                <StackPanel VerticalAlignment="Top" 
  HorizontalAlignment="Center" 
       Width="348" Height="440" Margin="0,126,0,0">

                    <!-- Logo/Title -->
                    <TextBlock Text="SplashGo" 
                       FontSize="36" 
                       FontFamily="Inter"
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,45">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#F9484A" Offset="0"/>
                                <GradientStop Color="#FBD72B" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <!-- Email Input -->
                    <Grid Margin="0,0,0,27">
                        <Border BorderBrush="#F9484A" 
       BorderThickness="1" 
        CornerRadius="5" 
       Background="White">
                            <Grid>
                                <TextBox x:Name="EmailTextBox" 
       Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
     Style="{StaticResource PlaceholderTextBoxStyle}"
            BorderThickness="0"
    Background="Transparent"
        GotFocus="EmailTextBox_GotFocus"
LostFocus="EmailTextBox_LostFocus"/>
                                <TextBlock x:Name="EmailPlaceholder"
  Text="Enter your email address" 
      Foreground="#e3e3e3" 
  FontSize="14" 
 FontFamily="Inter"
      FontWeight="Medium"
        Margin="40,13,12,12"
     IsHitTestVisible="False">
                                    <TextBlock.Visibility>
                                        <MultiBinding Converter="{StaticResource PlaceholderVisibilityConverter}">
                                            <Binding Path="Email"/>
                                            <Binding Path="IsEmailFocused"/>
                                        </MultiBinding>
                                    </TextBlock.Visibility>
                                </TextBlock>
                                <!-- User Icon -->
                                <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
  Fill="#F9484A" 
         Stretch="Uniform" 
              Width="20" 
         Height="20" 
   Margin="12,0,0,0"
           HorizontalAlignment="Left"
      VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Password Input -->
                    <Grid Margin="0,0,0,24">
                        <Border BorderBrush="#F9484A" 
                BorderThickness="1" 
       CornerRadius="5" 
               Background="White">
                            <Grid>
                                <PasswordBox x:Name="PasswordBox" 
       helpers:PasswordBoxHelper.Attach="True"
         helpers:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
         Style="{StaticResource PlaceholderPasswordBoxStyle}"
          BorderThickness="0"
     GotFocus="PasswordBox_GotFocus"
       LostFocus="PasswordBox_LostFocus"/>
                                <TextBlock x:Name="PasswordPlaceholder"
          Text="Enter your password"
  FontWeight="Medium"
         FontFamily="Inter"
            Foreground="#e3e3e3" 
       FontSize="14" 
               Margin="40,13,12,12"
            IsHitTestVisible="False">
                                    <TextBlock.Visibility>
                                        <MultiBinding Converter="{StaticResource PlaceholderVisibilityConverter}">
                                            <Binding Path="Password"/>
                                            <Binding Path="IsPasswordFocused"/>
                                        </MultiBinding>
                                    </TextBlock.Visibility>
                                </TextBlock>
                                <!-- Lock Icon -->
                                <Path Data="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z" 
        Fill="#F9484A" 
  Stretch="Uniform" 
      Width="20" 
    Height="20" 
  Margin="12,0,0,0"
 HorizontalAlignment="Left"
     VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Remember me & Forgot password -->
                    <Grid Margin="0,0,0,38">
                        <CheckBox Content="Remember me" 
   IsChecked="{Binding RememberMe}"
   Foreground="#aaa" 
  FontSize="13"
      FontWeight="Medium"
     FontFamily="Inter"
  VerticalAlignment="Center"
       HorizontalAlignment="Left"
         Style="{StaticResource CustomCheckBoxStyle}"/>
                    </Grid>

                    <!-- Sign up Button -->
         <Button Content="Sign up" 
         Margin="0,0,0,15"
                    Command="{Binding SignUpCommand}">
       <Button.Style>
          <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
     <Setter Property="Background">
        <Setter.Value>
     <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
      <GradientStop Color="#F9484A" Offset="0"/>
    <GradientStop Color="#FBD72B" Offset="1"/>
      </LinearGradientBrush>
     </Setter.Value>
    </Setter>
                  <Setter Property="Template">
  <Setter.Value>
     <ControlTemplate TargetType="Button">
              <Border x:Name="border"
              Background="{TemplateBinding Background}" 
        CornerRadius="5">
         <ContentPresenter HorizontalAlignment="Center" 
      VerticalAlignment="Center"/>
    </Border>
    <ControlTemplate.Triggers>
       <Trigger Property="IsMouseOver" Value="True">
         <Setter TargetName="border" Property="Background">
      <Setter.Value>
           <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#D63C3E" Offset="0"/>
      <GradientStop Color="#E0B824" Offset="1"/>
        </LinearGradientBrush>
     </Setter.Value>
          </Setter>
               </Trigger>
       <Trigger Property="IsPressed" Value="True">
          <Setter TargetName="border" Property="Background">
    <Setter.Value>
 <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
  <GradientStop Color="#B33032" Offset="0"/>
       <GradientStop Color="#C49F1E" Offset="1"/>
          </LinearGradientBrush>
       </Setter.Value>
    </Setter>
     </Trigger>
 </ControlTemplate.Triggers>
   </ControlTemplate>
       </Setter.Value>
    </Setter>
      </Style>
   </Button.Style>
  </Button>

    <!-- Continue with Google Button -->
     <Button Style="{StaticResource GoogleButtonStyle}"
   Margin="0,0,0,20"
              Command="{Binding GoogleSignInCommand}">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
<!-- Google Icon -->
               <Image Source="/Images/google-logo.png" 
             Width="20" 
     Height="20" 
       Margin="0,0,10,0"
     RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBlock Text="Continue with Google" 
              VerticalAlignment="Center"
         FontSize="14"
               FontWeight="Medium"
          Foreground="#333"/>
         </StackPanel>
    </Button>

  <!-- Sign in link -->
             <TextBlock HorizontalAlignment="Center" 
        FontSize="13"
 Foreground="#aaa">
      <Run Text="Already have an account?"/>
           <Hyperlink Foreground="#037ADE" 
   FontWeight="Medium"
               FontFamily="Inter"
 Command="{Binding SignInCommand}">
   <Hyperlink.Style>
      <Style TargetType="Hyperlink">
             <Setter Property="TextDecorations" Value="None"/>
          <Style.Triggers>
   <Trigger Property="IsMouseOver" Value="True">
       <Setter Property="TextDecorations" Value="Underline"/>
    </Trigger>
       </Style.Triggers>
     </Style>
        </Hyperlink.Style>
         Sign in
            </Hyperlink>
 </TextBlock>

         </StackPanel>
     </Grid>
      </Border>
    </Grid>
</Window>
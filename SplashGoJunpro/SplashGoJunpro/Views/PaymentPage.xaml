<Page x:Class="SplashGoJunpro.Views.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:SplashGoJunpro.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1820"
      Title="PaymentPage">

    <Page.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0066CC"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="TextGray" Color="#666666"/>
        <SolidColorBrush x:Key="PriceRed" Color="#E74C3C"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1A2332"/>

        <!-- Input TextBox Style with Placeholder -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Padding" Value="15,15"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <TextBlock Text="{TemplateBinding Tag}"
                                      FontSize="16"
                                      FontFamily="Inter"
                                      Foreground="#999999"
                                      Padding="15,0"
                                      VerticalAlignment="Center"
                                      IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsFocused, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Date Button Style -->
        <Style x:Key="DateButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Pay Button Style -->
        <Style x:Key="PayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="60,15"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Number Selector Style -->
        <Style x:Key="NumberSelectorStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="50"/>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBlue}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBlue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="60,15"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="60,40,60,60">

            <!-- Hotel Image and Info -->
            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="550"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hotel Image -->
                <Border Grid.Column="0" 
                        CornerRadius="15" 
                        Width="550" 
                        Height="400">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Destination.ImagePath}" 
                                   Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!-- Hotel Info and Available Dates -->
                <!-- Hotel Info and Available Dates -->
                <Grid Grid.Column="1" Margin="30,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Hotel Info (Top) -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="{Binding Destination.Name}" 
                   FontSize="32" 
                   FontWeight="Bold"
                   FontFamily="Inter"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/location_on.png" 
                   Width="20" 
                   Height="20" 
                   Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Destination.Location}" 
                       FontSize="18"
                       FontFamily="Inter"
                       Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Available Dates Section (Bottom) -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock Text="Available dates:" 
                   FontSize="20"
                   FontWeight="SemiBold"
                   FontFamily="Inter"
                   Margin="0,0,0,20"/>
                        <ItemsControl ItemsSource="{Binding AvailableDates}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DateButtonStyle}"
                            MouseLeftButtonDown="DateButton_Click"
                            Tag="{Binding}">
                                        <TextBlock FontSize="14"
                                   FontFamily="Inter"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding DateString}"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Divider -->
            <Border Height="2" 
                    Background="#E0E0E0" 
                    Margin="0,0,0,40"/>

            <!-- Lead Traveler Details -->
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Lead Traveler Details" 
                           FontSize="20"
                           FontWeight="SemiBold"
                           FontFamily="Inter"
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Full Name -->
                    <TextBox Grid.Column="0"
                             Style="{StaticResource InputTextBoxStyle}"
                             x:Name="FullNameTextBox"
                             Tag="Full Name"/>

                    <!-- ID Number -->
                    <TextBox Grid.Column="2"
                             Style="{StaticResource InputTextBoxStyle}"
                             x:Name="IdNumberTextBox"
                             Tag="ID Number"/>

                    <!-- Mobile Number -->
                    <TextBox Grid.Column="4"
                             Style="{StaticResource InputTextBoxStyle}"
                             x:Name="MobileNumberTextBox"
                             Tag="Mobile Number"/>
                </Grid>
            </StackPanel>

            <!-- PAX Section -->
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="PAX" 
                           FontSize="20"
                           FontWeight="SemiBold"
                           FontFamily="Inter"
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding PaxPrice}" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   FontFamily="Inter"
                                   Foreground="{StaticResource PriceRed}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="All ages" 
                                   FontSize="16"
                                   FontFamily="Inter"
                                   Foreground="{StaticResource TextGray}"/>
                    </StackPanel>

                    <!-- PAX Counter -->
                    <Border Grid.Column="2" 
                            Style="{StaticResource NumberSelectorStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Decrease Button -->
                            <Button Grid.Column="0"
                                    Content="−"
                                    FontSize="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="DecreasePax_Click"/>

                            <!-- PAX Count -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PaxCount}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       FontFamily="Inter"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- Increase Button -->
                            <Button Grid.Column="2"
                                    Content="+"
                                    FontSize="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="IncreasePax_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Divider -->
            <Border Height="2" 
                    Background="#E0E0E0" 
                    Margin="0,0,0,40"/>

            <!-- Total Price and Pay Button -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total Price -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Total Price" 
                               FontSize="24"
                               FontWeight="SemiBold"
                               FontFamily="Inter"
                   Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding TotalPrice}" 
                               FontSize="36"
                               FontWeight="Bold"
                               FontFamily="Inter"
                               Foreground="{StaticResource PriceRed}"/>
                </StackPanel>

                <!-- Pay Now Button -->
                <Button Grid.Column="1"
                        Style="{StaticResource PayButtonStyle}"
                        Content="Pay Now"
                        VerticalAlignment="Center"
                        Click="PayNow_Click"/>

                <!-- Cancel Button -->
                <Button Grid.Column="2"
                        Style="{StaticResource CancelButtonStyle}"
                        Content="Cancel"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0"
                        Click="Cancel_Click"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
<Page x:Class="SplashGoJunpro.Views.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:SplashGoJunpro.ViewModels"
      xmlns:converters="clr-namespace:SplashGoJunpro.Converters"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1820"
      Title="UserProfilePage">

    <Page.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#0066CC"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="TextGray" Color="#666666"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1A2332"/>
        <SolidColorBrush x:Key="PlaceholderGray" Color="#999999"/>

        <!-- Input TextBox Style -->
        <Style x:Key="ProfileInputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="Padding" Value="15,15,15,15"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="0"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Save Button Style -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <StackPanel Margin="60,40,60,60" MaxWidth="1200">

            <!-- Page Title -->
            <TextBlock Text="My Profile" 
                       FontSize="48"
                       FontWeight="Bold"
                       FontFamily="Inter"
                       Margin="0,0,0,40"/>

            <!-- Profile Card -->
            <Border Background="White"
                    CornerRadius="15"
                    Padding="50">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Profile Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profile Avatar -->
                        <Border Grid.Column="0"
                                Width="120"
                                Height="120"
                                CornerRadius="60"
                                Background="{StaticResource PrimaryBlue}"
                                Margin="0,0,30,0">
                            <TextBlock Text="{Binding UserInitials}"
                                      FontSize="48"
                                      FontWeight="Bold"
                                      FontFamily="Inter"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}" 
                                      FontSize="32"
                                      FontWeight="Bold"
                                      FontFamily="Inter"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding Email}" 
                                      FontSize="18"
                                      FontFamily="Inter"
                                      Foreground="{StaticResource TextGray}"/>
                        </StackPanel>

                        <!-- Edit Button -->
                        <Button Grid.Column="2"
                                Style="{StaticResource EditButtonStyle}"
                                Content="Edit Profile"
                                VerticalAlignment="Center"
                                Click="EditProfile_Click"/>
                    </Grid>

                    <!-- Profile Details -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Display Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                  Text="Display Name"
                                  FontSize="18"
                                  FontWeight="Medium"
                                  FontFamily="Inter"
                                  Foreground="{StaticResource TextGray}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,25"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                  FontSize="18"
                                  FontFamily="Inter"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,25">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding DisplayName}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DisplayName}" Value="">
                                            <Setter Property="Text" Value="Please update your profile"/>
                                            <Setter Property="Foreground" Value="{StaticResource PlaceholderGray}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DisplayName}" Value="{x:Null}">
                                            <Setter Property="Text" Value="Please update your profile"/>
                                            <Setter Property="Foreground" Value="{StaticResource PlaceholderGray}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Phone Number -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                  Text="Phone Number"
                                  FontSize="18"
                                  FontWeight="Medium"
                                  FontFamily="Inter"
                                  Foreground="{StaticResource TextGray}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,25"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                  FontSize="18"
                                  FontFamily="Inter"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,25">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding PhoneNumber}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding PhoneNumber}" Value="">
                                            <Setter Property="Text" Value="Please update your profile"/>
                                            <Setter Property="Foreground" Value="{StaticResource PlaceholderGray}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding PhoneNumber}" Value="{x:Null}">
                                            <Setter Property="Text" Value="Please update your profile"/>
                                            <Setter Property="Foreground" Value="{StaticResource PlaceholderGray}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Email -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                  Text="Email"
                                  FontSize="18"
                                  FontWeight="Medium"
                                  FontFamily="Inter"
                                  Foreground="{StaticResource TextGray}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,25"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                  FontSize="18"
                                  FontFamily="Inter"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,25">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Email}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Email}" Value="">
                                            <Setter Property="Text" Value="Please update your profile"/>
                                            <Setter Property="Foreground" Value="{StaticResource PlaceholderGray}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Email}" Value="{x:Null}">
                                            <Setter Property="Text" Value="Please update your profile"/>
                                            <Setter Property="Foreground" Value="{StaticResource PlaceholderGray}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Edit Profile Popup Overlay -->
        <Grid x:Name="EditProfileOverlay" 
              Visibility="{Binding IsEditPopupOpen, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#80000000"
              Panel.ZIndex="100">

            <!-- Popup Dialog -->
            <Border Background="White"
                    CornerRadius="15"
                    Padding="40"
                    Width="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,30">
                        <TextBlock Text="Edit Profile" 
                                  FontSize="32"
                                  FontWeight="Bold"
                                  FontFamily="Inter"
                                  HorizontalAlignment="Left"/>

                        <!-- Close Button -->
                        <Button HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                Width="35"
                                Height="35"
                                Cursor="Hand"
                                Click="CloseEditPopup_Click">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                  Fill="{StaticResource TextGray}"
                                  Width="20" 
                                  Height="20" 
                                  Stretch="Uniform"/>
                        </Button>
                    </Grid>

                    <!-- Display Name -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Display Name *" 
                                  FontSize="16"
                                  FontWeight="Medium"
                                  FontFamily="Inter"
                                  Foreground="{StaticResource TextGray}"
                                  Margin="0,0,0,10"/>
                        <TextBox x:Name="EditDisplayNameTextBox"
                                Style="{StaticResource ProfileInputStyle}"
                                Text="{Binding TempDisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Phone Number -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Phone Number *" 
                                  FontSize="16"
                                  FontWeight="Medium"
                                  FontFamily="Inter"
                                  Foreground="{StaticResource TextGray}"
                                  Margin="0,0,0,10"/>
                        <TextBox x:Name="EditPhoneNumberTextBox"
                                Style="{StaticResource ProfileInputStyle}"
                                Text="{Binding TempPhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Email *" 
                                  FontSize="16"
                                  FontWeight="Medium"
                                  FontFamily="Inter"
                                  Foreground="{StaticResource TextGray}"
                                  Margin="0,0,0,10"/>
                        <TextBox x:Name="EditEmailTextBox"
                                Style="{StaticResource ProfileInputStyle}"
                                Text="{Binding TempEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                                Content="Cancel"
                                Style="{StaticResource CancelButtonStyle}"
                                Click="CloseEditPopup_Click"/>

                        <!-- Save Button -->
                        <Button Grid.Column="2"
                                Content="Save Changes"
                                Style="{StaticResource SaveButtonStyle}"
                                Click="SaveProfile_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>